{% extends 'base.html.twig' %}

{% block body %}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="title-area">
                    <h2>Materiały dydaktyczne</h2>
                    <div class="separator separator-danger">✻</div>
                    {#<p class="description">We promise you a new look and more importantly, a new attitude. We build that by getting to know you, your needs and creating the best looking clothes.</p>#}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="info-icon">
                        <div class="icon text-danger">
                            <img src="https://png.icons8.com/ios/100/d35400/corgi-filled.png">
                        </div>
                        <h3>Pies</h3>
                        <ul class="list-unstyled">
                            {% for pdf in pdfs %}
                                <a href="{{ vich_uploader_asset(pdf, 'pdfFile') }}"> <i class="fa fa-file-pdf-o"></i></a> {{ pdf.title }} </li>
                            {% endfor %}
                            <li><i class="fa fa-file-pdf-o"></i> Tytuł pdfa </li>
                            <li><i class="fa fa-file-pdf-o"></i> Tytuł pdfa 2</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-icon">
                        <div class="icon text-danger">
                            <img src="https://png.icons8.com/ios/100/d35400/black-cat-filled.png">
                        </div>
                        <h3>Kot</h3>
                        <p class="description">We create a persona regarding the multiple wardrobe accessories that we provide..</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-icon">
                        <div class="icon text-danger">
                            <img src="https://png.icons8.com/ios/100/d35400/contract-job-filled.png">
                        </div>
                        <h3>Klient/formalności</h3>
                        <p class="description">We like to present the world with our work, so we make sure we spread the word regarding our clothes.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block copyright %}
<br>
    <a href="https://icons8.com">Icon pack by Icons8</a>
{% endblock %}

{% block stylesheets %}
    <style>
        .section .parallax, .section .static-image {
            height: 50vh;
        }

